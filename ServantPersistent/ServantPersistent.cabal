name:                ServantPersistent
version:             0.1.0.0
synopsis:            Initial project template from stack
description:         Please see README.md
homepage:            https://github.com/githubuser/ServantPersistent#readme
license:             BSD3
license-file:        LICENSE
author:              Author name here
maintainer:          example@example.com
copyright:           2016 Author name here
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     API
                     , Types
                     , Auth
                     , Server
                     , Environ
                     , Models
                     , Domain.Tenant
                     , Domain.User
                     , Updater
                     , DBTypes
                     , Operation
                     , ProductQuery
  ghc-options:       -Wall -fno-warn-unticked-promoted-constructors
  build-depends:       base >= 4.7 && < 5
                     , aeson
                     , servant-server
                     , servant
                     , servant-auth-cookie
                     , cereal
                     , wai
                     , ghc-prim
                     , text
                     , time
                     , bytestring
                     , warp
                     , mtl
                     , persistent
                     , persistent-template
                     , persistent-postgresql
                     , monad-logger
                     , exceptions
                     , lens
                     , unordered-containers
                     , containers
                     , transformers
                     , data-default
                     , vector
  default-language:    Haskell2010
  default-extensions:  OverloadedStrings
                     , StandaloneDeriving
                     , LambdaCase

executable ServantPersistent-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , ServantPersistent
                     , servant-server
                     , servant
                     , servant-auth-cookie
                     , persistent-postgresql
                     , monad-logger
                     , wai
                     , warp
                     , cryptonite
                     , data-default
  default-language:    Haskell2010

test-suite ServantPersistent-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , ServantPersistent
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/ServantPersistent
